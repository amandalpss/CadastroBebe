<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9695"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="     Na hora do banho o sabonete deve ser o mais neutro possível, pois o pH próximo ao da pele ajuda a evitar ressecamento e irritações."
        android:id="@+id/textView8"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="     Fazer a higienização e a troca de fraldas de maneira adequada ajuda a prevenir diversas doenças causadas por fungos e bactérias que se proliferam na umidade e na presença de fezes e de urina. "
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="    O ideal é trocar a fralda cerca de oito vezes ao dia, especialmente quando você notar que a criança fez xixi ou cocô."
        android:id="@+id/textView10"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />
</LinearLayout>